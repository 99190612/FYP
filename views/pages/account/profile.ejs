<body>
    <div class="container" style="width: 60%; padding-top: 4em;">
        <div class="card">
            <div class="card-header text-white bg-dark">
                <h4 class="card-title">Profile Details</h4>
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="col-md-6">
                        <table class="table table-hover">
                            <tbody>
                                <br>
                                <tr>
                                    <th scope="row">User Name:</th>
                                    <td>
                                        <%= user.fullName %>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Email:</th>
                                    <td>
                                        <%= user.emailAddress %>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Gender:</th>
                                    <td>
                                        <%= user.gender %>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Age:</th>
                                    <td>
                                        <%= user.age %>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Contact:</th>
                                    <td>
                                        <%= user.phone %>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Living District:</th>
                                    <td>
                                        <%= user.livingArea %>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Short Description:</th>
                                    <td>
                                        <%= user.shortDesc %>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Past Experience:</th>
                                    <td>
                                        <%= user.pastExperience %>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <br>
    <br>

</body>