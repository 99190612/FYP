<head>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.0/moment.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/js/tempusdominus-bootstrap-4.min.js"
        integrity="sha512-k6/Bkb8Fxf/c1Tkyl39yJwcOZ1P4cRrJu77p83zJjN2Z55prbFHxPs9vN7q3l3+tSMGPDdoH51AEU8Vgo1cgAA=="
        crossorigin="anonymous"></script>
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/css/tempusdominus-bootstrap-4.min.css"
        integrity="sha512-3JRrEUwaCkFUBLK1N8HehwQgu8e23jTH4np5NHOmQOobuC4ROQxFwFgBLTnhcnQRMs84muMh0PnnwXlPq5MGjg=="
        crossorigin="anonymous" />
</head>

<body>
    <!--postAds.ejs-->
    <div style="background-color: #BCCEF8;">
        <div class="card">
            <div class="card-header" style="background-color: #e3f2fd;">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Find care</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ads/postAvailability">Find a job</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <form id="formData" name="formData" action="/ads/postAds" method="post" enctype='multipart/form-data'
                    style="padding: 1em 1em;">
                    <input type="hidden" name="_csrf" id="_csrf" value="<%- _csrf %>" />
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="exampleFormControlSelect1">Job Type</label>
                            <select class="form-control" id="jobType" name="jobType" required>
                                <option selected disabled value="">Select dropdown</option>
                                <option value="HouseKeeper">HouseKeeper</option>
                                <option value="Medical Care">Medical Care</option>
                                <option value="Elderly Care">Elderly Care</option>
                                <option value="Child Care">Child Care</option>
                                <option value="Personal Care">Personal Care</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleFormControlInput1">Title</label>
                            <input class="form-control" id="title" name="title" placeholder="What are you looking for?"
                                required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Location</label>
                        <select class="form-control" id="location" name="location" required>
                            <option selected disabled value="">Select dropdown</option>
                            <option value="Central">Central</option>
                            <option value="Cheung Chau">Cheung Chau</option>
                            <option value="Kowloon City">Kowloon City</option>
                            <option value="Kwai Tsing">Kwai Tsing</option>
                            <option value="Kwun Tong">Kwun Tong</option>
                            <option value="Lantau Island">Lantau Island</option>
                            <option value="Sai Kung">Sai Kung</option>
                            <option value="Sham Shui Po">Sham Shui Po</option>
                            <option value="Sha Tin">Sha Tin</option>
                            <option value="Tai Po">Tai Po</option>
                            <option value="Tsuen Wan">Tsuen Wan</option>
                            <option value="Tuen Mun">Tuen Mun</option>
                            <option value="Wan Chai">Wan Chai</option>
                            <option value="Wong Tai Sin">Wong Tai Sin</option>
                            <option value="Yau Tsim Mong">Yau Tsim Mong</option>
                            <option value="Yuen Long">Yuen Long</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="2"
                            placeholder="Responsibilities, Requirements of the Job..." required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect2">Contract Type</label>
                        <select class="form-control" size="2" id="contract" name="contract" required>
                            <option value="Part Time">Part Time</option>
                            <option value="Full Time">Full Time</option>
                            <option value="Temporary">Temporary</option>
                            <option value="Freelance">Freelance</option>
                            <option value="Contract">Contract</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="exampleFormControlInput1">Salary (per Hour / Month)</label>
                            <input class="form-control" id="salary" name="salary" type="number" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleFormControlInput1">Contact Information</label>
                            <input class="form-control" id="contact" name="contact" placeholder="Phone number/Email"
                                required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="exampleFormControlInput1">Remarks</label>
                            <input class="form-control" id="remarks" name="remarks" placeholder="Optional">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleFormControlInput1">Ads Type</label>
                            <input class="form-control" type="text" placeholder="Job" id="adType" name="adType"
                                value="Job" readonly>
                        </div>
                    </div>
                    <!-- dynamic date form -->
                    <label for="exampleFormControlTextarea1">Requested Timeslot</label>
                    <div id="dynamicForm" style="outline: #4CAF50 solid 3px;">
                        <div name="checkboxInput" style="padding: 1em 1em;">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="scheduleOptions" id="checkbox1"
                                    value="one-off" checked onclick="ttb_function()">
                                <label class="form-check-label" for="inlineRadio1">One-Off</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="scheduleOptions" id="checkbox2"
                                    value="regular" onclick="ttb_function()">
                                <label class="form-check-label" for="inlineRadio2">Regularly</label>
                            </div>
                        </div>
                        <div id="oneoff_form">
                            <div class="form-body pal">
                                <div class="col-md-12 col-md-offset-10">
                                    <div class="form-group">
                                        <button type="button" id="add_details_button"
                                            class="btn btn-info add_details_button"><i class="fa fa-plus"></i> Add
                                            Date</button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-body pal">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover add_row"
                                                id="details">
                                                <thead>
                                                    <tr>
                                                        <th>Date</th>
                                                        <th>Delete</th>
                                                    </tr>
                                                </thead>
                                                <tr>
                                                    <td>
                                                        <input id="date0" name="requestedTimeslot" class="form-control"
                                                            type="datetime-local" />
                                                    </td>
                                                    <td>
                                                        <button type="button"
                                                            class="delete btn btn-danger">Delete</button>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="regular_form" style="display: none; padding: 1em 1em;">
                            <table class="table table-bordered ">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>MON</th>
                                        <th>TUE</th>
                                        <th>WED</th>
                                        <th>THU</th>
                                        <th>FRI</th>
                                        <th>SAT</th>
                                        <th>SUN</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Morning</td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[morning][MON]"></td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[morning][TUE]"></td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[morning][WED]"></td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[morning][THU]"></td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[morning][FRI]"></td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[morning][SAT]"></td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[morning][SUN]"></td>

                                    </tr>
                                    <tr>
                                        <td>Afternoon</td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[afternoon][MON]">
                                        </td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[afternoon][TUE]">
                                        </td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[afternoon][WED]">
                                        </td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[afternoon][THU]">
                                        </td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[afternoon][FRI]">
                                        </td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[afternoon][SAT]">
                                        </td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[afternoon][SUN]">
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>Evening</td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[evening][MON]"></td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[evening][TUE]"></td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[evening][WED]"></td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[evening][THU]"></td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[evening][FRI]"></td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[evening][SAT]"></td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[evening][SUN]"></td>
                                    </tr>
                                    <tr>
                                        <td>Midnight</td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[midnight][MON]">
                                        </td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[midnight][TUE]">
                                        </td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[midnight][WED]">
                                        </td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[midnight][THU]">
                                        </td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[midnight][FRI]">
                                        </td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[midnight][SAT]">
                                        </td>
                                        <td><input type="checkbox" name="requestedTimeslot" value="[midnight][SUN]">
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- dynamic date form end-->
                    <br>
                    <div class="form-group" style="padding-bottom: 2em;">
                        <label for="exampleFormControlFile1">Picture Related</label>
                        <div class="custom-file">
                            <label for="img">Choose a photo: </label>
                            <input type="file" id="img" name="img" accept="image/*" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>

<script type="text/javascript">
    $(document).ready(function () {
        var count = 1;
        // Append table with add row form on add new button click
        $(".add_details_button").click(function () {    //button click to add row
            var row = '<tr>' +
                '<td><input id="date' + count + '" name="requestedTimeslot"  class="form-control" type="datetime-local" required/></td>' + '<td><button type="button" class="delete btn btn-danger">Delete</button></td>' + '</tr>';
            count = count + 1;
            $("#details").append(row);
        });
        // Delete row on delete button click
        $(document).on("click", ".delete", function () {
            $(this).parents("tr").remove();
        });
    });
</script>

<script type="text/javascript">
    function ttb_function() {
        var checkbox1 = document.getElementById("checkbox1");
        if (checkbox1.checked == true) {
            document.getElementById("oneoff_form").style.display = '';
            document.getElementById("regular_form").style.display = 'none';
        } else {
            //display when checkbox2 checked
            document.getElementById("oneoff_form").style.display = 'none';
            document.getElementById("regular_form").style.display = '';
        }
    }
</script>