<script>
    btnChange("<%= ad.adType %>", "<%= ad.owner %>", "<%= req.session.userId %>","<%= regUser %>");
    function btnChange(adType, adOwner, userId, regUser){
        if(adOwner == userId){
            // hide the application button if the ads belongs to this user
                document.getElementById("submitAppl").style.visibility = "hidden"; 
        }
        
        if(adType == 'Availability'){
            document.getElementById("submitAppl").innerText = 'Send Interview Request';
        }else{
            document.getElementById("submitAppl").innerText = 'Apply';
        }

        // if user already register the ads...
        var registered = regUser.indexOf(userId)
        if(registered != -1){
            document.getElementById("submitAppl").innerText = 'Submitted';
            document.getElementById("submitAppl").disabled = true;
        }

    }

    function openform(adType) {
        if(adType == 'Availability'){
            document.getElementById("myForm").style.display = "block";
            $(document).ready(function() {
            var count=1;
            // Append table with add row form on add new button click
            $(".add_details_button").click(function(){    //button click to add row
                var row = '<tr>' +
                    '<td><input id="date'+count+'" name="interviewTimeslot"  class="form-control" type="datetime-local" required/></td>' + '<td><button type="button" class="delete btn btn-dark">Delete</button></td>' + '</tr>';
                count=count+1;
            $("#details").append(row);
            });
    // Delete row on delete button click
            $(document).on("click", ".delete", function() {
                $(this).parents("tr").remove();
                });
            });
        }else if(adType == 'Job'){
            // show another form

        }
    }

    function closeForm() {
        document.getElementById("myForm").style.display = "none";
    }

    function tryAgain(e) 
    {
    setTimeout(reloadImg, 1000, e);
    }

    function reloadImg(e)
    {
    var source = e.src;
    e.src = source;
    }

    function loadPage(scheduleOptions, availableTimeslot, requestedTimeslot)
    {   

        // console.log("Received data: [available]" + availableTimeslot + "[requested]" + requestedTimeslot)
        if(availableTimeslot != ""){
            const availableTimeslotNEW = availableTimeslot.split(",");
            // console.log("New availableTimeslot??" , availableTimeslotNEW);
            if(scheduleOptions== 'one-off'){
                document.getElementById("DateLINE").style.display = '';
                document.getElementById("TTB").style.display = 'none';
                for (let i = 0; i < availableTimeslotNEW.length; i++){
                    var row = '<tr>' + '<td><input name="availabilityTimeslot"  class="form-control" type="datetime-local" value="'+availableTimeslotNEW[i]+'" readOnly /></td>' + '</tr>';
                    $("#DateLINE").append(row);
                    }
            }else if(scheduleOptions== 'regular'){
                document.getElementById("DateLINE").style.display = 'none';
                document.getElementById("TTB").style.display = '';
                for (let i = 0; i < availableTimeslotNEW.length; i++){
                    document.getElementById(availableTimeslotNEW[i]).checked = true;
                }
            }
        }else if(requestedTimeslot != ""){
            // console.log("Received data??" , requestedTimeslot);
            const requestedTimeslotNEW = requestedTimeslot.split(",");
            // console.log("New requestedTimeslotNEW??" , requestedTimeslotNEW);
            if(scheduleOptions== 'one-off'){
                document.getElementById("DateLINE").style.display = '';
                document.getElementById("TTB").style.display = 'none';
                for (let i = 0; i < requestedTimeslotNEW.length; i++){
                    var row = '<tr>' + '<td><input name="requestedTimeslot"  class="form-control" type="datetime-local" value="'+requestedTimeslotNEW[i]+'" readOnly /></td>' + '</tr>';
                    $("#DateLINE").append(row);
                    }
            }else if(scheduleOptions== 'regular'){
                document.getElementById("DateLINE").style.display = 'none';
                document.getElementById("TTB").style.display = '';
                for (let i = 0; i < requestedTimeslotNEW.length; i++){
                    document.getElementById(requestedTimeslotNEW[i]).checked = true;
                }
            }
        }else{
            alert("[Error!] Cannot receive any schedule data!");
        }
    }

</script>

<script>
    async function regAppl(adId){
        
        var r = confirm("Confirm to send?");
        
        if (r) {          
            var form = document.getElementById("formData");
            var formData = new FormData(form);
            var response = await fetch("/user/application/add/" + adId, {
                method: "POST", 
                body: formData,
            });           
            if (response.ok) {
                alert("Request sent! Application created.");
                location.reload(true);
            }
        } else {
            alert("cancelled");
        }
    }
</script>

